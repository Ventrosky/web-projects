extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if prods.length > 0
        .grid
            each product in prods
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    div.card__image
                        img(src="https://via.placeholder.com/150", alt="a book", srcset="")
                    div.card__content
                        h2.product__price â‚¬19.99
                        p.product__description An interesting book placeholder
                    .card__actions
                        button.btn Add to Cart
    else
        h1 No Products